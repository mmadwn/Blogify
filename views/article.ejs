<%- include('partials/header') %>
<div class="container main-content">
    <main>
        <article class="post full-article">
            <h1><%= article.title %></h1>
            <div class="post-meta">
                <span class="author">Author: <%= article.author %></span>
                <span class="category">Category: <%= article.category %></span>
                <span class="date">Date: <%= new Date(article.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
            </div>
            <% if (article.image) { %>
                <div class="post-image article-image">
                    <img src="<%= article.image %>" alt="<%= article.title %>">
                </div>
            <% } %>
            <div class="post-content">
                <%- article.content %>
            </div>
        </article>
    </main>
    <aside>
        <section class="trending">
            <h3>Trending Posts</h3>
            <ul>
                <% trendingPosts.forEach(post => { %>
                    <li><a href="/article/<%= post.id %>"><%= post.title %></a></li>
                <% }) %>
            </ul>
        </section>
    </aside>
</div>
<%- include('partials/footer') %>